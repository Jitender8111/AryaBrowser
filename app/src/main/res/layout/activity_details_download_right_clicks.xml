<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".detailsDownloadRightClicks">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="25dp"
        android:gravity="center"

        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:layout_margin="7dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="File name"
            android:layout_weight="1.6"
            android:textSize="17dp"
            ></TextView>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textSize="12dp"
            android:layout_weight="0.4"
            android:id="@+id/btncopyfilename"

            ></Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        ></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="file name"
        android:id="@+id/fileName"
        android:textSize="15dp"
        android:gravity="center"
        ></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:layout_margin="7dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="File Size"
            android:layout_weight="1.5"
            android:textSize="17dp"
            ></TextView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        ></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="file Size"
        android:id="@+id/fileSize"
        android:textSize="15dp"
        android:gravity="center"

        android:layout_weight="1.5"
        ></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:layout_margin="7dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="File Url"
            android:layout_weight="1.6"
            android:textSize="17dp"
            ></TextView>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textSize="12dp"
            android:layout_weight="0.4"
            android:id="@+id/btnfileurl"

            ></Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        ></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="file Url"
        android:id="@+id/fileurl"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_weight="2"
        ></TextView>

</LinearLayout>