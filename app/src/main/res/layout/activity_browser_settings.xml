<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".BrowserSettings">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.8"
      android:weightSum="5"
      android:orientation="horizontal"
      android:elevation="5dp"
      >
      <ImageButton
          android:id="@+id/btnCancelSetting"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="0.7"
          android:src="@drawable/ic_arrow_back_black_24dp"
          android:background="@drawable/micbuttonbackground"
          ></ImageButton>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Setting"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3.6"

        ></TextView>

  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light3"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:weightSum="10"
        android:layout_weight="9.2"
        android:orientation="vertical"
        >


      <Switch
          android:id="@+id/btnSwitchDayNightMode"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:text="Daynight Mode On/Off"
          android:textSize="16dp"
          android:layout_weight="0.7"
          android:layout_marginRight="15dp"
          android:layout_marginLeft="15dp"
          android:textOff="OFF"
          android:textOn="On"
          android:showText="true"
          android:switchTextAppearance="@style/SwitchTextAppearanceByMe"
          ></Switch>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"></View>

        <Switch
            android:id="@+id/btnSwitchNotification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Notification On/Off"
            android:textSize="16dp"
            android:layout_weight="0.7"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textOff="OFF"
            android:textOn="On"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTextAppearanceByMe"
            ></Switch>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"></View>

     <Switch
          android:id="@+id/btnSwitchDeskTopMode"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:text="Desktop Mode On/Off"
          android:textSize="16dp"
          android:layout_weight="0.7"
          android:layout_marginRight="15dp"
          android:layout_marginLeft="15dp"
          android:textOff="OFF"
          android:textOn="On"
         android:showText="true"
         android:switchTextAppearance="@style/SwitchTextAppearanceByMe"
          ></Switch>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gray_light"></View>


    </LinearLayout>

</LinearLayout>